@using SimpleApp.Models
@model SimpleApp.Models.Category
@{
    Layout = null;
    //ProductReader product = new ProductReader();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Name</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link href="~/styles.css" rel="stylesheet" />
</head>
<body>
    <h2>@Model.Name</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Имя</th>
                <th scope="col">Описание</th>
                <th scope="col">Количество</th>
                <th scope="col">Цена</th>
                <th scope="col">Информация</th>
            </tr>
        </thead>


        @foreach (var item in Model.Products)
        {
            <tbody>
                <tr scope="row">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    @if (item.Quantity <= 0)
                    {
                        <td class="text-danger">Нет в наличии</td>
                    }
                    else if (item.Quantity <= 5)
                    {
                        <td class="text-warning">Заканчивается</td>
                    }
                    else if (item.Quantity >= 6)
                    {
                        <td class="text-success">Достаточно</td>
                    }
                    <td>@item.Price</td>
                    <td>
                        <a href="/Products/Details/@item.Id">Подробнее...</a>
                    </td>
                </tr>
            </tbody>
        }
    </table>

</body>
</html>